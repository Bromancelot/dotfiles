'SET COLOR CURLINE WHITE ON BLACK'
'SET COLOR IDLINE GRAY ON BLACK'
'SET COLOR FILEAREA GREEN ON BLACK'
'SET COLOR CURSORLINE GRAY ON BLACK'
'SET COLOR CMDLINE GREEN ON BLACK'
'SET COLOR CPREFIX BRIGHT CYAN ON BLACK'
 
/* (re)define keys */
'DEFINE ENTER ENTER'
'DEFINE C-M ENTER'
'DEFINE S-HOME SOS CURRENT'
'DEFINE END SOS STARTENDCHAR'
'DEFINE S-END SOS FIRSTCHAR'
'DEFINE \561 SOS TABWORDF'
'DEFINE \546 SOS TABWORDB'
'DEFINE C-E SOS DELEND'  
 
/* Document and define the PF keys */
'DEFINE F1    HELP'
'DEFINE F2    ADD'
'DEFINE F3    QUIT'
'DEFINE F4    SOS TABF'
'DEFINE F5    SCHANGE'
'DEFINE F6    ?'
'DEFINE F7    BACKWARD'
'DEFINE F8    FORWARD'
'DEFINE F9    ='
'DEFINE F10   RGTLEFT'
'DEFINE F11   SPLTJOIN'
'DEFINE F12   CURSOR PREFIX'
'DEFINE S-F5 CMATCH ' /* find matching []{}<>() */
 
/* "Ipsf"-asize the prefix */
'PREFIX SYNONYM b p'
'PREFIX SYNONYM a f'
'PREFIX SYNONYM r "'
'PREFIX SYNONYM rr ""'
