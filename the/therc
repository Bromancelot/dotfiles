/* setup style */
/* 2018-07-25: clean up style */
'SET COMPAT X X X'
'SET SCALE ON 3'
'SET CURLINE 4'
'SET CMDLINE BOTTOM'
'SET WRAP ON'
'SET STAY ON'
'SET VERIFY 1'
'SET CASE MIXED IGNORE IGNORE IGNORE MIXED MIXED'
'SET TRAILING EMPTY'
'SET NUMBER   ON'              /* Number lines in prefix area   */
'SET PREFIX   NULLS LEFT 6 1'  /* Prefix left fill with nulls   */
'SET SHADOW   OFF'             /* Don't display shadow lines    */
'SET MSGLINE  ON 2 15 OVERLAY' /* Many lines for messages       */
'SET AUTOSAVE 20'              /* AUTOSAVE every 20 alterations */
'SET INPUTMODE LINE'
'SET REPROFILE ON'
 
/* macro processing setup */
'SET MACROPATH /home/mikfer/bin'
 
/* tab stuff */
'SET TABS INCR 4'
'SET TABKEY TAB TAB'
/* 'DEFINE S-TAB SOS TABB' */
/* revisit these for python ? */
/* 'SET TABSIN ON 4' */
/* 'SET TABSOUT ON 4' */
'DEFINE TAB MACRO hndltab'
'DEFINE S-TAB MACRO hndltab'
 
/* setup colors . . . turning syntax coloring off for now */
'SET COLORING OFF'
/*
